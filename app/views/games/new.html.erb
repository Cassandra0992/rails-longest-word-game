<div class="container">
  <h1>New game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
    <div class="letter">
        <%= letter %>
    </div>
    <% end %>
  </div>

  <div class="user-input">
    <p>What is the longest word you can find?</p>
    <form action="/score" class="form-inline" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="input-group">
        <input type="text" name="word" class="form-control" value="<%= params[:word] %>">
        <div class="input-group-append">
          <input type="submit" value="Play" class="form-control btn btn-primary">
        </div>
    </form>
  </div>
</div>


